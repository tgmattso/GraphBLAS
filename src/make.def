# Project root not used yet
PROJECT_ROOT	= some_path_to/HPEC18_tutorial/code

PLATFORM := $(shell uname -s)

CC	= UNKNOW_PLATFORM

ifeq ($(PLATFORM),Linux)
	CC	= gcc
	OPTS	= -g
	#OPTS	= -Ofast -march=native -DNDEBUG
	#OPTS	= -g -fsanitize=address
	WFLAGS	= -Wall
	DEFS	=
	INCLUDE	= -I$(INCDIR)
	LIB	= -llagraph -lgraphblas -lm -Wl,-rpath,$(LIBDIR) -L$(LIBDIR)
endif

ifeq ($(PLATFORM),Darwin)
	CC	= icc -std=c11
	OPTS	= -g
	WFLAGS	= -Wall
	DEFS	=
	INCLUDE	= -I$(INCDIR)
	LIB	= -llagraphOSX -lgraphblasOSX -lm -Wl,-rpath,$(LIBDIR) -L$(LIBDIR)
endif

CCFLAGS	= $(OPTS) $(WFLAGS) $(DEFS) $(INCLUDE)
